<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="false"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              tools:context="com.syhler.android.messagingapp.ui.chatroom.ChatRoomActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ListView
            android:id="@+id/messages_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:divider="#fff"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
        />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/message_input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="@string/write_a_message"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:text=""/>

        <ImageButton
            android:id="@+id/message_camera_button"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/baseline_camera_alt_black_24dp"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/message_attach_button"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/baseline_attach_file_black_24dp"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/message_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/baseline_send_black_24dp"
            android:padding="20dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>