<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/temp_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"/>
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginBottom="200dp" app:layout_constraintBottom_toTopOf="@+id/temp_message"
        app:layout_constraintStart_toStartOf="parent" tools:srcCompat="@tools:sample/avatars"/>
    <Button
        android:id="@+id/button_log_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" android:layout_marginBottom="20dp"
        android:background="@color/colorAccent" android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>