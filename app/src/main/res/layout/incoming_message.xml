<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="60dp"
                android:clipToPadding="false">

    <TextView
        android:id="@+id/message_date"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/message_owner_name"
        android:paddingBottom="4dp" android:text="Date"/>
    <ImageView
        android:id="@+id/message_avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/message_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/message_owner_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/message_avatar"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:layout_below="@+id/message_owner_name"
        android:layout_alignLeft="@+id/message_owner_name"
        android:background="@drawable/incoming_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a long message that should probably wrap."
    />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/message_avatar"
        android:adjustViewBounds="true"
        android:background="@drawable/incoming_message" android:cropToPadding="true"
        android:paddingBottom="4dp"
    />
</RelativeLayout>